@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DiplomApplication.Web.Models.LoginViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    @using DiplomApplication;
    @using DiplomApplication.Web.Models;
    <link rel="stylesheet" href="/css/Login.css" />
}
<form class="login-form" method="post" asp-action="Login">
    <div class="form-input-material">
        <h2>Вход в систему</h2>
        <label asp-for="Login" for="Login">Логин:</label>
        <input asp-for="Login" name="Login" />
        <span asp-validation-for="Login" class="text-danger"></span>
        <label asp-for="Password" for="password">Пароль:</label>
        <input asp-for="Password" type="Password" name="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="submit" value="Вход " />
    </div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Registration">Создать аккаунт</a>
</form>