@model DiplomApplication.Web.Models.ProfileViewModel

@{
    ViewData["Title"] = "Профиль";
}
@{
    <link rel="stylesheet" href="/css/Profile.css" />
}
<div class="profile-container">
    <h1 class="profile-title">Профиль</h1>
    <div class="user-info">
        <h2 class="user-greeting">Здравствуйте, @Model.user.Name</h2>
        <h2 class="bonus-points">Бонусных баллов: @Model.user.BonusPoints</h2>
    </div>
    <table class="orders-table">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Адрес</th>
                <th>Статус</th>
                <th>Сумма</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.orders)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Adress</td>
                    <td>@item.Status.Name</td>
                    <td>@item.Sum</td>
                </tr>
            }
        </tbody>
    </table>
</div>